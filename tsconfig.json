{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": ["es2019"],
    "removeComments": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "incremental": true
  },
  "include": [
    "nodes/**/*.ts",
    "credentials/**/*.ts",
    "nodes/**/*.json",
    "package.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
